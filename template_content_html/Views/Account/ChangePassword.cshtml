@model HomeHelp.Models.ChangePasswordModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<style type="text/css">
    .validationErrorMessagecolor {
        color: red;
        float: right;
        font-size: 12px;
        margin: 0 0px 0 55px;
    }

    .text-danger1 {
        color: #ffde00;
    }
    .errorMessage {
        color: #b52626;
        font-weight: bold;
        font-size: initial;
        margin-top: 4px;
    }
</style>

@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
}
@{Html.RenderAction("DisplayMessage", "Base", new { ShowMessage = TempData["ShowMessage"], MessageBody = TempData["MessageBody"] });}
@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="login login-v2" data-pageload-addclass="animated fadeIn">

        <div class="login-content">

            <form class="margin-bottom-0">
                <div class="form-group m-b-20">
                    <div>@Html.PasswordFor(m => m.OldPassword, new { placeholder = Html.DisplayNameFor(m => m.OldPassword), @class = "form-control input-lg"})</div>
                    <div class="errorMessage">@Html.ValidationMessageFor(model => model.OldPassword)</div>

                </div>
                <div class="form-group m-b-20">
                    <div>
                        @Html.PasswordFor(m => m.NewPassword, new { placeholder = Html.DisplayNameFor(m => m.NewPassword), @class = "form-control input-lg" })
                    </div>
                    <div style=" color: white; margin: 1%;">password must be 6 characters long</div>
                    <div class="errorMessage">@Html.ValidationMessageFor(model => model.NewPassword)</div>
                </div>
                <div class="form-group m-b-20">
                    <div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = Html.DisplayNameFor(m => m.ConfirmPassword), @class = "form-control input-lg"})
                    </div>
                    <div class="errorMessage">@Html.ValidationMessageFor(model => model.ConfirmPassword)</div>
                </div>
                <div class="login-buttons">
                    <button type="submit" class="btn btn-success btn-block btn-lg">Change Password</button>
                </div>

            </form>
        </div>
    </div>


}