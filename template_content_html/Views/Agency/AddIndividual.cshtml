@model IEnumerable<HomeHelp.Models.AgencyIndividualModel>
@{
    ViewBag.Title = "Agencies";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div style="margin-top:2%">
    @{
        Html.RenderAction("DisplayMessage", "Base", new { ShowMessage = TempData["ShowMessage"], MessageBody = TempData["MessageBody"] });
    }
</div>
<h2 class="page-header">Hire Individuals</h2>
<!-- begin row -->
<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div class="panel panel-inverse">
            <div class="panel-heading">

                <h4 class="panel-title"></h4>
            </div>
            <div class="panel-body table-responsive">
                <table id="example" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Work Rate</th>
                            <th>Address</th>
                            <th>Contact Number</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @{ var odd = true; }
                        @foreach (var item in Model)
                        {
                            <tr class="@(odd ? "odd gradeX" : "even gradeX")">
                                <td>@item.FullName</td>
                                <td>@item.EmailId</td>
                                <td>@item.WorkRate</td>
                                <td>@item.Address</td>
                                <td>@item.ContactNumber</td> 
                                <td>
                                    @if (item.IsInvited == false)
                                    {
                                        <input id="add_btn" type="button" value="Add" class="add_btn btn btn-success m-r-5 m-b-5" data-bind="@item.AgencyIndividualId" />
                                    }
                                    else
                                    {
                                        <span class="btn btn-success m-r-5 m-b-5">Invitation already sent.</span>
                                    }

                                </td>
                            </tr>
                                    odd = !odd;
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>
<!-- end row -->
<script type="text/javascript">
    //Initialize tooltip with jQuery
    $(document).ready(function () {
        var pageNo = @ViewBag.currentPageNumber;
        if(parseInt(@ViewBag.currentPageNumber)>0)
        {
            var table = $('#example').DataTable({"displayStart": (10*parseInt(@ViewBag.currentPageNumber))-10});
        }
        else{
            $('#example').DataTable();
        }
        $('#example').on('page.dt', function () {
            var info = $('#example').DataTable().page.info();
            pageNo = info.page + 1;
            $.get('@Url.Action("Pagination", "Agency")', {currentPageNumber: pageNo,currentView:"Index"}, function (data) {
            });
        });
        $('.add_btn').on("click",function(){
            var input = $(this);
            var data=null;
            if ($(input).data().bind) {
                data=$(input).data().bind;
            }
            input.button('loading');
            
            $.ajax({
                type: 'POST',
                url: '/Agency/AddIndividual',
                data: JSON.stringify({individualId:data}),
                contentType: 'application/json',
                success: function (result) {
                    if (result == false) {
                        input.button('reset');
                        swal("Sorry", "Something went wrong.Please try again.", "error")
                    }
                    else{
                        swal({
                            title: "Success",
                            text: "Invitation sent to the Individual.",
                            type: "success",
                            confirmButtonClass: "btn-danger",
                            confirmButtonText: "Ok",
                            closeOnConfirm: false,
                        },
                        function(isConfirm) {
                            if (isConfirm) {
                                input.button('reset');
                                window.location.href="/Agency/AddIndividual"
                            }
                        });
                    }
                },
                error: function () {
                    input.button('reset');
                    swal("Sorry", "Something went wrong.Please try again.", "error")

                }
            });
        })
    });
  
</script>
